{
  "manifest_version": 3,
  "name": "Note Slayer",
  "description": "مفكرة قوية وبسيطة مع ميزات: بحث، وسوم، تثبيت، تصدير/استيراد، وحفظ التحديد.",
  "version": "1.0.0",
  "action": {
    "default_title": "Note Slayer",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "contextMenus",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "options_page": "options.html",
  "commands": {
    "save-selection": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "حفظ التحديد في ملاحظة جديدة"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}